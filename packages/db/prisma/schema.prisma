generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id Int @id @default(autoincrement()) @unique
  firstName String
  lastName String?
  email String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt @default(now())
}

model Room{
  id Int @id @default(autoincrement()) @unique
  roomdId String @unique
}

model Chat{
  id Int @id @default(autoincrement()) @unique
  userId String[]

}
